<% layout('layout') -%>

<div class="row">
    <div class="col s12 m12">
        <header>
            <h1>Formato mantenimiento</h1>
            <address>
                <p>RFC: MOGD-950731-NP4</p>
                <p>Alfa No. 372, Local A, Col. Contry<br>Monterrey, Nuevo Le√≥n. CP. 64860</p>
                <p>Tel. 11 33 65 62 y 83 57 67 94</p>
                <p>WhatsApp: 8116402723</p>
            </address>
            <span><img src="./images/Logo.png" alt="" style="width: 300px;"></span>
        </header>

        <article>
            <h3>Cliente</h3>
            <address>
              <p>Nombre: <input type="text" name="nombreCliente" id="nombreCliente" style="height: unset; margin: unset; width: unset;" contenteditable></input></p>
              <p>E-mail: <input type="text" name="emailCliente" id="emailCliente" style="height: unset; margin: unset; width: unset;"></input></p>
              <p>Telefono: <input type="tel" name="telefonoCliente" id="telefonoCliente" style="height: unset; margin: unset; width: unset;" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" minlength="8" maxlength="10"></input></span></p>
            </address>

            <table class="meta">
                <tr>
                    <th><span>Folio No.</span></th>
                    <td><span contenteditable></span></td>
                </tr>
                <tr>
                    <th><span>Fecha</span></th>
                    <td><input type="text" class="datepicker" style="margin: unset; height: auto; border-bottom: none;"></td>
                </tr>
                <tr>
                    <th><span>Empleado</span></th>
                    <td><input type="text" style="border-bottom:none; height: unset; margin: unset; width: unset;"></input></td>
                </tr>
                <tr>
                    <th><span>Total a pagar</span></th>
                    <td><span id="prefix">$</span><span>0.00</span></td>
                </tr>
            </table>

            <table class="inventory">
                <thead>
                    <tr>
                        <th><span>Modelo</span></th>
                        <th><span>Serie</span></th>
                        <th><span>Accesorios y/o complementos</span></th>
                        <th><span>Falla reportada</span></th>
                        <th><span>Costo</span></th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                      <td><a class="cut">-</a><span contenteditable></span></td>
                      <td><span contenteditable></span></td>
                      <td><span contenteditable></span></td>
                      <td><span contenteditable></span></td>
                      <td><span data-prefix>$</span><span contenteditable></span></td>
                    </tr>
                </tbody>
            </table>
            <a class="add">+</a>

            <table class="balance">
                <tr>
                    <th><span contenteditable>Total</span></th>
                    <td><span data-prefix>$</span><span contenteditable>0.00</span></td>
                </tr>

                <tr>
                    <th><span contenteditable>Anticipo / Descuento</span></th>
                    <td><span data-prefix>$</span><span contenteditable="">0.00</span></td>
                </tr>

                <tr>
                    <th><span contenteditable>Total a deber</span></th>
                    <td><span data-prefix>$</span><span>0.00</span></td>
                </tr>
            </table>
        </article>
        <div style="text-align: center;">
          <button class="btn waves-effect waves-light print-button" style="background-color:#000" type="submit" id="btnMant" name="btnMant">Imprimir
            <i class="material-icons right">print</i>
          </button>
        </div>
    </div>
</div>

<script src="./javascripts/Man-script.js" type="text/javascript"></script>
